{% macro btn(title,cta,btn='') %}
<a href="{{cta}}" title="{{title}}" class="btn {{btn}}">{{title}}</a>
{% endmacro %}

{% macro section(selector) %}
{% for item in selector %}
    <section class="{{ item.data.section}}" {% if item.data.style %}style="{{ item.data.style }}"{% endif %}>
        {{ item.content | safe }}
    </section>
{% endfor %}
{% endmacro %}