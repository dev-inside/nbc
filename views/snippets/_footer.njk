<footer id="main-footer">
    <div class="wrapper grid grid--vertical-align-center">
        <section class="col-12 col-md-8 col-center col-md-left">
            {# rdfa snippets #}
            <div vocab="https://schema.org/" typeof="Organization">
                Â© <span property="name" class="strong">{{ footer.org.name }}</span> -
                <span property="address">
                    <span property="streetAddress">{{ footer.org.street }}</span>,
                    <span property="addressLocality">{{ footer.org.city }}</span>,
                    <span property="postalCode">{{ footer.org.zip }}</span>
                </span>
            </div>

            {# Legal links #}
            <nav class="nav--separator">
                <ul>
                    {%- for legal in collections.legal %}
                    <li>
                        <a href="#" title="{{ legal.data.title }}">{{ legal.data.title }}</a>
                    </li>
                    {% endfor -%}
                </ul>
            </nav>
        </section>
        {# External/Social Links #}
        <nav class="col-12 col-md-4 col-center col-md-right social">
            <ul>
                {%- for ext in footer.external %}
                <li>
                    <a href="{{ ext.url }}" target="_blank" title="{{ ext.title }}">{% img "external/" + ext.img,
                        ext.title %}</a>
                </li>
                {% endfor -%}
            </ul>
        </nav>
    </div>
</footer>